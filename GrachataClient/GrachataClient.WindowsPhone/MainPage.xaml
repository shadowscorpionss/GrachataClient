<Page
    x:Class="GrachataClient.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GrachataClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="User Name" VerticalAlignment="Top" FontSize="13.333"/>
        <TextBox x:Name="userNameTextBox" HorizontalAlignment="Left" Margin="10,21,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" FontSize="13.333" Margin="0,65,0,0"/>
        <PasswordBox x:Name="passwordTextBox" HorizontalAlignment="Left" Margin="10,86,0,0" VerticalAlignment="Top" Width="380"/>
        <Button x:Name="button" Content="Login" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,134,10,0" Width="109" Click="button_Click"/>

    </Grid>
</Page>